{
  "name": "francoisromain.github.io.postcss-button",
  "version": "0.1.0",
  "description": "gh-pages for postcss-button",
  "author": "Francois Romain <francoisromain@gmail.com>",
  "license": "MIT",
  "repository": "francoisromain/postcss-button",
  "scripts": {
    "babel": "babel postcss-button/src --out-dir postcss-button/lib",
    "css": "postcss --local-plugins -u ./postcss-button src/button.css -o dist/button.css",
    "css-01": "postcss --local-plugins -u ./postcss-button -i test/src/01.css -o test/dist/01.css",
    "css-02": "postcss --local-plugins -u ./postcss-button -i test/src/02.css -o test/dist/02.css",
    "build": "npm run babel && npm run css",
    "test": "npm run babel && npm run css && npm run css-01 && npm run css-02",
    "watch": "onchange 'index.html' 'src/**/*.*' 'postcss-button/src/**/*.*' -- npm run build",
    "reload": "livereload",
    "start": "npm-run-all --parallel watch reload"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "livereload": "^0.4.1",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.5.0",
    "postcss": "^5.0.21",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.6.0",
    "postcss-import": "^8.1.2",
    "system.css": "^0.2.4",
    "prismjs": "^1.5.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}